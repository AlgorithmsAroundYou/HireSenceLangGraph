{
  "version": 1,
  "type": "collection",
  "name": "HireSence LangGraph APIs",
  "items": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "url": "http://127.0.0.1:8000/auth/login",
        "headers": [
          { "name": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "type": "json",
          "json": {
            "user_name": "saikodati",
            "password": "root"
          }
        }
      }
    },
    {
      "name": "Chat",
      "request": {
        "method": "POST",
        "url": "http://127.0.0.1:8000/chat",
        "headers": [
          { "name": "Content-Type", "value": "application/json" },
          { "name": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "type": "json",
          "json": {
            "message": "Summarize the responsibilities of a data engineer."
          }
        }
      }
    },
    {
      "name": "JD Builder",
      "request": {
        "method": "POST",
        "url": "http://127.0.0.1:8000/jd/builder",
        "headers": [
          { "name": "Content-Type", "value": "text/plain; charset=utf-8" },
          { "name": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "type": "text",
          "text": "Senior Backend Engineer\n\nWe are looking for a senior backend engineer with experience in Java, Spring Boot, and microservices..."
        }
      }
    },
    {
      "name": "JD Upload",
      "request": {
        "method": "POST",
        "url": "http://127.0.0.1:8000/jd/upload",
        "headers": [
          { "name": "accept", "value": "application/json" },
          { "name": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "type": "form-data",
          "formData": [
            {
              "name": "file",
              "type": "file",
              "fileName": "sample_jd.txt"
            },
            {
              "name": "uploaded_by",
              "type": "text",
              "value": "saikodati"
            }
          ]
        }
      }
    },
    {
      "name": "JD Details",
      "request": {
        "method": "GET",
        "url": "http://127.0.0.1:8000/jd/1",
        "headers": [
          { "name": "accept", "value": "application/json" },
          { "name": "Authorization", "value": "Bearer {{token}}" }
        ]
      }
    },
    {
      "name": "Resume Upload",
      "request": {
        "method": "POST",
        "url": "http://127.0.0.1:8000/resumes/upload?jd_id=1",
        "headers": [
          { "name": "accept", "value": "application/json" },
          { "name": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "type": "form-data",
          "formData": [
            {
              "name": "file",
              "type": "file",
              "fileName": "candidate_resume.pdf"
            },
            {
              "name": "uploaded_by",
              "type": "text",
              "value": "saikodati"
            }
          ]
        }
      }
    },
    {
      "name": "Resumes by JD",
      "request": {
        "method": "GET",
        "url": "http://127.0.0.1:8000/resumes?jd_id=1",
        "headers": [
          { "name": "accept", "value": "application/json" },
          { "name": "Authorization", "value": "Bearer {{token}}" }
        ]
      }
    }
  ]
}